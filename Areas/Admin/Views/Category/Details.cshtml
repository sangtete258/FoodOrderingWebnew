@using FoodOrderingWeb.Models.Entities
@model Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Chi tiết danh mục</h5>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" />
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Tên danh mục:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Mô tả:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Số lượng món:</dt>
                        <dd class="col-sm-9">@(Model.Foods?.Count ?? 0)</dd>
                    </dl>

                    @if (Model.Foods != null && Model.Foods.Any())
                    {
                        <h6 class="mt-4">Danh sách món ăn:</h6>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Tên món</th>
                                        <th>Giá</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var food in Model.Foods)
                                    {
                                        <tr>
                                            <td>@food.Name</td>
                                            <td>@food.Price.ToString("N0") đ</td>
                                            <td>
                                                @if (food.IsAvailable)
                                                {
                                                    <span class="badge bg-success">Có sẵn</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Hết hàng</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>