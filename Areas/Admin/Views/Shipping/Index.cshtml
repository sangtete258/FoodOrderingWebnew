@model List<FoodOrderingWeb.Models.Entities.ShippingConfig>
@{
    ViewData["Title"] = "Quản lý Phí Ship";
}

<div class="page-header">
    <h1><i class="bi bi-truck"></i> Quản lý Phí Ship</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
            <li class="breadcrumb-item active">Phí Ship</li>
        </ol>
    </nav>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Danh sách cấu hình phí ship</h5>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm cấu hình mới
        </a>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Khu vực</th>
                            <th>Phí ship</th>
                            <th>Khoảng cách (km)</th>
                            <th>Từ khóa tìm kiếm</th>
                            <th>Trạng thái</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.AreaName</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br>
                            
                                        <small class="text-muted">@item.Description</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-primary">@item.ShippingFee.ToString("N0")đ</span>
                                </td>
                                <td>
                                    @if (item.EstimatedDistance.HasValue)
                                    {
                                        <span>~@item.EstimatedDistance.Value km</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.SearchKeywords))
                                    {
                                        <small class="text-muted">
                                            @string.Join(", ", item.SearchKeywords.Split(',').Take(3))
                                            @if (item.SearchKeywords.Split(',').Length > 3)
                                            {
                                                <span>...</span>
                                            }
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <button type="button"
                                            class="btn btn-sm toggle-active @(item.IsActive ? "btn-success" : "btn-secondary")"
                                            data-id="@item.ShippingConfigId"
                                            data-status="@item.IsActive">
                                        <i class="bi @(item.IsActive ? "bi-check-circle" : "bi-x-circle")"></i>
                                        <span class="status-text">@(item.IsActive ? "Hoạt động" : "Tạm dừng")</span>
                                    </button>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.ShippingConfigId"
                                           class="btn btn-sm btn-warning"
                                           title="Chỉnh sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-sm btn-danger delete-btn"
                                                data-id="@item.ShippingConfigId"
                                                data-name="@item.AreaName"
                                                title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 48px; color: #ccc;"></i>
                <p class="text-muted mt-3">Chưa có cấu hình phí ship nào</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Thêm cấu hình đầu tiên
                </a>
            </div>
        }
    </div>
</div>

<!-- Form xóa ẩn -->
<form id="deleteForm" method="post" asp-action="Delete" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" id="deleteId" name="id" />
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Toggle Active/Inactive
            $('.toggle-active').click(function () {
                var btn = $(this);
                var id = btn.data('id');
                var currentStatus = btn.data('status');

                $.ajax({
                    url: '@Url.Action("ToggleActive", "Shipping")',
                    type: 'POST',
                    data: {
                        id: id,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            // Cập nhật giao diện
                            if (response.isActive) {
                                btn.removeClass('btn-secondary').addClass('btn-success');
                                btn.find('i').removeClass('bi-x-circle').addClass('bi-check-circle');
                                btn.find('.status-text').text('Hoạt động');
                            } else {
                                btn.removeClass('btn-success').addClass('btn-secondary');
                                btn.find('i').removeClass('bi-check-circle').addClass('bi-x-circle');
                                btn.find('.status-text').text('Tạm dừng');
                            }
                            btn.data('status', response.isActive);

                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công!',
                                text: response.message,
                                timer: 1500,
                                showConfirmButton: false
                            });
                        } else {
                            Swal.fire('Lỗi!', response.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Lỗi!', 'Có lỗi xảy ra khi cập nhật trạng thái', 'error');
                    }
                });
            });

            // Xóa config
            $('.delete-btn').click(function () {
                var id = $(this).data('id');
                var name = $(this).data('name');

                Swal.fire({
                    title: 'Xác nhận xóa?',
                    html: `Bạn có chắc muốn xóa cấu hình <strong>${name}</strong>?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Xóa',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $('#deleteId').val(id);
                        $('#deleteForm').submit();
                    }
                });
            });
        });
    </script>
}

<style>
    .toggle-active {
        min-width: 110px;
    }
</style>