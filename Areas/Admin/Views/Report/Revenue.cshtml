@model FoodOrderingWeb.Models.ViewModels.RevenueReportViewModel
@{
    ViewData["Title"] = "Báo cáo doanh thu";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-dollar-sign"></i> Báo cáo doanh thu</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại Dashboard
            </a>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Bộ lọc</h5>
        </div>
        <div class="card-body">
            <form asp-action="Revenue" method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Từ ngày</label>
                        <input type="date" name="FromDate" class="form-control"
                               value="@Model.Filter.FromDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Đến ngày</label>
                        <input type="date" name="ToDate" class="form-control"
                               value="@Model.Filter.ToDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Chu kỳ</label>
                        <select name="Period" class="form-select">
                            <option value="0" selected="@(Model.Filter.Period == FoodOrderingWeb.Models.ViewModels.ReportPeriod.Day)">Theo ngày</option>
                            <option value="1" selected="@(Model.Filter.Period == FoodOrderingWeb.Models.ViewModels.ReportPeriod.Week)">Theo tuần</option>
                            <option value="2" selected="@(Model.Filter.Period == FoodOrderingWeb.Models.ViewModels.ReportPeriod.Month)">Theo tháng</option>
                            <option value="3" selected="@(Model.Filter.Period == FoodOrderingWeb.Models.ViewModels.ReportPeriod.Year)">Theo năm</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Trạng thái</label>
                        <select name="Status" class="form-select">
                            <option value="">Tất cả</option>
                            <option value="0">Chờ xác nhận</option>
                            <option value="1">Đang chuẩn bị</option>
                            <option value="2">Đang giao</option>
                            <option value="3">Hoàn thành</option>
                            <option value="4">Đã hủy</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Xem báo cáo
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6>Tổng đơn hàng</h6>
                    <h3>@Model.Summary.TotalOrders</h3>
                    <small>Hoàn thành: @Model.Summary.CompletedOrders</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6>Doanh thu thuần</h6>
                    <h3>@Model.Summary.NetRevenue.ToString("N0") ₫</h3>
                    <small>Tổng: @Model.Summary.TotalRevenue.ToString("N0") ₫</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6>Giá trị TB/đơn</h6>
                    <h3>@Model.Summary.AverageOrderValue.ToString("N0") ₫</h3>
                    <small>Phí ship: @Model.Summary.TotalShippingFee.ToString("N0") ₫</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h6>Tỷ lệ hoàn thành</h6>
                    <h3>@Model.Summary.CompletionRate.ToString("N1")%</h3>
                    <small>Đã hủy: @Model.Summary.CancelledOrders</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Chart -->
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Biểu đồ doanh thu</h5>
                    <form asp-action="ExportRevenueExcel" method="post" style="display: inline;">
                        <input type="hidden" name="FromDate" value="@Model.Filter.FromDate" />
                        <input type="hidden" name="ToDate" value="@Model.Filter.ToDate" />
                        <input type="hidden" name="Period" value="@Model.Filter.Period" />
                        <input type="hidden" name="Status" value="@Model.Filter.Status" />
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="fas fa-file-excel"></i> Xuất Excel
                        </button>
                    </form>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" height="100"></canvas>
                </div>
            </div>
        </div>

        <!-- Revenue by Status -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Theo trạng thái</h5>
                </div>
                <div class="card-body">
                    <canvas id="statusChart"></canvas>
                    <div class="mt-3">
                        @foreach (var item in Model.RevenueByStatus)
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>@item.StatusText</span>
                                <strong>@item.Count (@item.Percentage.ToString("N1")%)</strong>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-table"></i> Chi tiết doanh thu</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Thời gian</th>
                            <th class="text-end">Tổng đơn</th>
                            <th class="text-end">Doanh thu</th>
                            <th class="text-end">Phí ship</th>
                            <th class="text-end">Doanh thu thuần</th>
                            <th class="text-center">Hoàn thành</th>
                            <th class="text-center">Đã hủy</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.RevenueData)
                        {
                            <tr>
                                <td><strong>@item.PeriodDisplay</strong></td>
                                <td class="text-end">@item.TotalOrders</td>
                                <td class="text-end">@item.TotalRevenue.ToString("N0") ₫</td>
                                <td class="text-end">@item.TotalShippingFee.ToString("N0") ₫</td>
                                <td class="text-end"><strong class="text-success">@item.NetRevenue.ToString("N0") ₫</strong></td>
                                <td class="text-center"><span class="badge bg-success">@item.CompletedOrders</span></td>
                                <td class="text-center"><span class="badge bg-danger">@item.CancelledOrders</span></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <th>Tổng cộng</th>
                            <th class="text-end">@Model.Summary.TotalOrders</th>
                            <th class="text-end">@Model.Summary.TotalRevenue.ToString("N0") ₫</th>
                            <th class="text-end">@Model.Summary.TotalShippingFee.ToString("N0") ₫</th>
                            <th class="text-end"><strong class="text-success">@Model.Summary.NetRevenue.ToString("N0") ₫</strong></th>
                            <th class="text-center">@Model.Summary.CompletedOrders</th>
                            <th class="text-center">@Model.Summary.CancelledOrders</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart');
        const revenueData = @Html.Raw(Json.Serialize(Model.RevenueData));

        new Chart(revenueCtx, {
            type: 'bar',
            data: {
                labels: revenueData.map(d => d.PeriodDisplay),
                datasets: [
                    {
                        label: 'Doanh thu thuần',
                        data: revenueData.map(d => d.NetRevenue),
                        backgroundColor: 'rgba(75, 192, 192, 0.6)',
                        borderColor: 'rgb(75, 192, 192)',
                        borderWidth: 1
                    },
                    {
                        label: 'Phí ship',
                        data: revenueData.map(d => d.TotalShippingFee),
                        backgroundColor: 'rgba(255, 206, 86, 0.6)',
                        borderColor: 'rgb(255, 206, 86)',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true, position: 'top' },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.dataset.label + ': ' + context.parsed.y.toLocaleString('vi-VN') + ' ₫';
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString('vi-VN') + ' ₫';
                            }
                        }
                    }
                }
            }
        });

        // Status Chart
        const statusCtx = document.getElementById('statusChart');
        const statusData = @Html.Raw(Json.Serialize(Model.RevenueByStatus));

        new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: statusData.map(d => d.StatusText),
                datasets: [{
                    data: statusData.map(d => d.Count),
                    backgroundColor: [
                        'rgba(255, 206, 86, 0.6)',
                        'rgba(54, 162, 235, 0.6)',
                        'rgba(255, 159, 64, 0.6)',
                        'rgba(75, 192, 192, 0.6)',
                        'rgba(255, 99, 132, 0.6)'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: false }
                }
            }
        });
    </script>
}

<style>
    .card {
        border: none;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
    }
</style>