@model FoodOrderingWeb.Models.Entities.Order
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title mb-4">Đặt hàng thành công!</h2>
                    <p class="mb-3">Mã đơn hàng của bạn là: <strong class="text-primary">@Model.OrderCode</strong></p>
                    <p class="text-muted">Vui lòng lưu mã đơn hàng để tra cứu</p>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Thông tin đơn hàng</h5>
                            <div class="row mb-2">
                                <div class="col-md-4 text-muted">Khách hàng:</div>
                                <div class="col-md-8">@Model.CustomerName</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 text-muted">Số điện thoại:</div>
                                <div class="col-md-8">@Model.PhoneNumber</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 text-muted">Địa chỉ:</div>
                                <div class="col-md-8">@Model.DeliveryAddress</div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Note))
                            {
                                <div class="row mb-2">
                                    <div class="col-md-4 text-muted">Ghi chú:</div>
                                    <div class="col-md-8">@Model.Note</div>
                                </div>
                            }
                            <div class="row mb-2">
                                <div class="col-md-4 text-muted">Tổng tiền:</div>
                                <div class="col-md-8">@Model.TotalAmount.ToString("N0")đ</div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 text-muted">Trạng thái:</div>
                                <div class="col-md-8">
                                    <span class="badge bg-warning">Chờ xác nhận</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house"></i> Về trang chủ
                        </a>
                        <a asp-controller="Order" asp-action="Track" class="btn btn-outline-primary">
                            <i class="bi bi-search"></i> Tra cứu đơn hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>