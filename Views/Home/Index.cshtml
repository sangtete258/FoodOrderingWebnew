@model FoodOrderingWeb.Models.HomeViewModel

@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">
            <i class="bi bi-shop"></i> Đặt đồ ăn online
        </h1>
        <p class="lead mb-4">Giao hàng nhanh chóng - Thanh toán dễ dàng</p>
        <a href="@Url.Action("Index", "Menu")" class="btn btn-light btn-lg">
            <i class="bi bi-list"></i> Xem thực đơn
        </a>
    </div>
</div>

<!-- 🔍 TRA CỨU ĐƠN HÀNG -->
<div class="container mb-5">
    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <div class="display-1 text-primary">
                        <i class="bi bi-search"></i>
                    </div>
                    <h4 class="mt-3 fw-bold">Tra cứu đơn hàng</h4>
                    <p class="text-muted">Nhập mã đơn hàng để kiểm tra trạng thái</p>
                </div>
                <div class="col-md-8">
                    <form id="trackOrderForm" action="@Url.Action("TrackResult", "Order")" method="get">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-primary text-white">
                                <i class="bi bi-upc-scan"></i>
                            </span>
                            <input type="text"
                                   class="form-control"
                                   name="orderCode"
                                   id="orderCodeInput"
                                   placeholder="Nhập mã đơn hàng (VD: DH20251102...)"
                                   required
                                   pattern="DH[0-9]+"
                                   title="Mã đơn hàng phải bắt đầu bằng DH">
                            <button class="btn btn-primary px-4" type="submit">
                                <i class="bi bi-search"></i> Tra cứu
                            </button>
                        </div>
                        <small class="text-muted d-block mt-2">
                            <i class="bi bi-info-circle"></i>
                            Mã đơn hàng có dạng: DH20251102235959...
                        </small>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Danh mục món ăn -->
<div class="container mb-5">
    <h2 class="text-center mb-4">
        <i class="bi bi-grid"></i> Danh mục món ăn
    </h2>
    <div class="row g-4">
        @foreach (var category in Model.Categories)
        {
            <div class="col-md-3 col-sm-6">
                <div class="card h-100 text-center shadow-sm hover-lift">
                    @if (!string.IsNullOrEmpty(category.ImageUrl))
                    {
                        <img src="@category.ImageUrl" class="card-img-top" alt="@category.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-image fs-1 text-muted"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <p class="card-text text-muted small">@category.Description</p>
                        }
                        <a href="@Url.Action("Index", "Menu", new { categoryId = category.CategoryId })"
                           class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-arrow-right"></i> Xem món
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Món ăn phổ biến -->
<div class="container mb-5">
    <h2 class="text-center mb-4">
        <i class="bi bi-fire"></i> Món ăn phổ biến
    </h2>
    <div class="row g-4">
        @foreach (var food in Model.PopularFoods)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card h-100 shadow-sm hover-lift">
                    @if (!string.IsNullOrEmpty(food.ImageUrl))
                    {
                        <img src="@food.ImageUrl" class="card-img-top" alt="@food.Name" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                            <i class="bi bi-image fs-1 text-muted"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@food.Name</h5>
                        <p class="card-text text-primary fw-bold fs-5">@food.Price.ToString("N0") đ</p>
                        @if (!string.IsNullOrEmpty(food.Description))
                        {
                            <p class="card-text text-muted small">@food.Description</p>
                        }
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-info">
                                <i class="bi bi-eye"></i> @food.ViewCount lượt xem
                            </span>
                            @if (food.Category != null)
                            {
                                <span class="badge bg-secondary">@food.Category.Name</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Details", "Menu", new { id = food.FoodId })"
                               class="btn btn-outline-primary btn-sm flex-grow-1">
                                <i class="bi bi-info-circle"></i> Chi tiết
                            </a>
                            @if (food.IsAvailable)
                            {
                                <button class="btn btn-primary btn-sm add-to-cart" data-food-id="@food.FoodId">
                                    <i class="bi bi-cart-plus"></i> Thêm
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm" disabled>
                                    <i class="bi bi-x-circle"></i> Hết
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Features Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-3 col-sm-6">
                <div class="feature-box">
                    <i class="bi bi-truck fs-1 text-primary mb-3"></i>
                    <h5>Giao hàng nhanh</h5>
                    <p class="text-muted">Giao hàng trong 30-45 phút</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="feature-box">
                    <i class="bi bi-shield-check fs-1 text-success mb-3"></i>
                    <h5>An toàn vệ sinh</h5>
                    <p class="text-muted">Đảm bảo chất lượng món ăn</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="feature-box">
                    <i class="bi bi-credit-card fs-1 text-info mb-3"></i>
                    <h5>Thanh toán dễ dàng</h5>
                    <p class="text-muted">Nhiều hình thức thanh toán</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="feature-box">
                    <i class="bi bi-headset fs-1 text-warning mb-3"></i>
                    <h5>Hỗ trợ 24/7</h5>
                    <p class="text-muted">Luôn sẵn sàng hỗ trợ bạn</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/cart.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function() {
            // Add to cart functionality
            $('.add-to-cart').click(function() {
                var btn = $(this);
                var foodId = btn.data('food-id');

                btn.prop('disabled', true).html('<i class="bi bi-hourglass-split"></i>');

                $.post('/Cart/AddToCart', { foodId: foodId, quantity: 1 })
                    .done(function(result) {
                        if (result.success) {
                            $('#cart-count').text(result.cartCount).removeClass('d-none');

                            Swal.fire({
                                title: 'Thành công!',
                                text: 'Đã thêm vào giỏ hàng',
                                icon: 'success',
                                showCancelButton: true,
                                confirmButtonText: 'Đến giỏ hàng',
                                cancelButtonText: 'Tiếp tục mua'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = '/Cart';
                                }
                            });
                        }
                    })
                    .fail(function() {
                        Swal.fire('Lỗi!', 'Có lỗi xảy ra', 'error');
                    })
                    .always(function() {
                        btn.prop('disabled', false).html('<i class="bi bi-cart-plus"></i> Thêm');
                    });
            });

            // Track order form validation
            $('#trackOrderForm').submit(function(e) {
                var orderCode = $('#orderCodeInput').val().trim();
                if (!orderCode.startsWith('DH')) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi',
                        text: 'Mã đơn hàng phải bắt đầu bằng "DH"'
                    });
                    return false;
                }
            });
        });
    </script>
}

<style>
    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .feature-box {
        padding: 20px;
        transition: all 0.3s ease;
    }

        .feature-box:hover {
            transform: scale(1.05);
        }
</style>